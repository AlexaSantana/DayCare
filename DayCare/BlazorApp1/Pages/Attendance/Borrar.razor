@page "/attendance/delete/{id:int}"
@using DayCareFRon.Frontend
@inject AttendanceService AttendanceService
@inject NavigationManager Nav

<h3>Eliminar Registro de Asistencia</h3>

<p>¿Seguro que deseas eliminar este registro?</p>

<button class="btn btn-danger" @onclick="Delete">Sí, eliminar</button>
<button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>

@code {
    [Parameter] public int id { get; set; }

    async Task Delete()
    {
        await AttendanceService.DeleteAsync(id);
        Nav.NavigateTo("/attendance");
    }

    void Cancel() => Nav.NavigateTo("/attendance");
}
