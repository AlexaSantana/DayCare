@page "/activities/delete/{id:int}"
@using DayCareFRon.Frontend
@inject ActivityService ActivityService
@inject NavigationManager Nav

<h3>Eliminar Actividad</h3>

<p>¿Seguro que deseas eliminar esta actividad?</p>

<button class="btn btn-danger" @onclick="Delete">Sí, eliminar</button>
<button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>

@code {
    [Parameter] public int id { get; set; }

    async Task Delete()
    {
        await ActivityService.DeleteAsync(id);
        Nav.NavigateTo("/activities");
    }

    void Cancel() => Nav.NavigateTo("/activities");
}
