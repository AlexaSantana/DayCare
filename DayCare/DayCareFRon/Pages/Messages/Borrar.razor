@page "/messages/delete/{id:int}"
@using DayCareFRon.Frontend
@inject MessageService MessageService
@inject NavigationManager Nav

<h3>Eliminar Mensaje</h3>

<p>¿Seguro que deseas eliminar este mensaje?</p>

<button class="btn btn-danger" @onclick="Delete">Sí, eliminar</button>
<button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>

@code {
    [Parameter] public int id { get; set; }

    async Task Delete()
    {
        await MessageService.DeleteAsync(id);
        Nav.NavigateTo("/messages");
    }

    void Cancel() => Nav.NavigateTo("/messages");
}
