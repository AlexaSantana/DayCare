@page "/tutors/create"
@inject TutorService TutorService
@inject NavigationManager Nav
@using DayCare.Application.DTOs
@using DayCareFRon.Frontend

<h3>Nuevo Tutor</h3>

<EditForm Model="tutor" OnValidSubmit="Save">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Nombre Completo:</label>
        <InputText class="form-control" @bind-Value="tutor.FullName" />
    </div>

    <div class="mb-3">
        <label>Parentesco:</label>
        <InputText class="form-control" @bind-Value="tutor.Relationship" />
    </div>

    <div class="mb-3">
        <label>Teléfono:</label>
        <InputText class="form-control" @bind-Value="tutor.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <InputText class="form-control" @bind-Value="tutor.Email" />
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>
</EditForm>

@code {
    TutorDto tutor = new();

    async Task Save()
    {
        await TutorService.CreateAsync(tutor);
        Nav.NavigateTo("/tutors");
    }

    void Cancel() => Nav.NavigateTo("/tutors");
}
